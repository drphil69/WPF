<Window x:Class="RedYellowGreen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RedYellowGreen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel x:Name="StackPanel" Height="450">
        <Grid>
            <RadioButton Content="Rød"
                         HorizontalAlignment="Left"
                         Margin="185,112,0,0"
                         VerticalAlignment="Top"
                         Checked="Red_Checked" />
            <RadioButton Content="Gul"
                         HorizontalAlignment="Left"
                         Margin="185,132,0,0"
                         VerticalAlignment="Top"
                         Checked="Yellow_Checked"/>
            <RadioButton Content="Grøn"
                         HorizontalAlignment="Left"
                         Margin="185,152,0,0"
                         VerticalAlignment="Top"
                         Checked="Green_Checked"/>

        </Grid>
    </StackPanel>
</Window>
