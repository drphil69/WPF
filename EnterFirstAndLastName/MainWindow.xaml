<Window x:Class="EnterFirstAndLastName.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnterFirstAndLastName"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textBoxFirstname"
                 HorizontalAlignment="Left"
                 Margin="88,113,0,0"
                 Text="Indtast fornavn"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="120" />
        <Button Content="Bekræft"
                HorizontalAlignment="Left"
                Margin="276,122,0,0"
                VerticalAlignment="Top"
                Click="Button_Click" />
        <TextBlock x:Name="Result"
                   HorizontalAlignment="Left"
                   Margin="160,226,0,0"
                   Text=""
                   TextWrapping="Wrap"
                   VerticalAlignment="Top" />
        <TextBox x:Name="textBoxLastname" HorizontalAlignment="Left"
                 Margin="88,159,0,0"
                 Text="Indtast efternavn"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="120" />
    </Grid>
</Window>
